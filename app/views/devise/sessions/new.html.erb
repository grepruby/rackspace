</div>
<div id="signinPanel" class="span-15 last">
<div id="napkinTopSmall"></div>
<div id="napkinMiddleSmall">
<h2 class="lora28pt68804D">Sign in to your<br />Hostess Account</h2>
<br />
<hr size="6" align="center">
<hr size="4" align="center">
<br />
<%=form_for(resource, :as=> resource_name, :url => session_path(resource_name)) do |f| %>
<%=f.text_field(:email , {:class=>"arial12pt808080 textInput"})%>
<br /><br />
<%=f.password_field(:password, {:class=>"arial12pt808080 textInput"})%>
<br /><br />
<div>
<%=f.check_box( :remember_me, :class=>"arial12pt68804D") %><span class="arial12pt68804D">Keep me signed in</span>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%=link_to("Forgot your password?", new_password_path(resource_name), :class=>"arialUln12pt291911") %>
<br />
</div>
<br /><br />
<div>
<%=f.submit("", :id=> "signinBtn") %>
</div>
<br />
<% flash.each do |name, msg| %>
<span class="arial15ptBE1E2D"><%=msg%></span>
<% end %>
<% end %>
<br />
<hr size="6" align="center">
<hr size="4" align="center">
<br />
<div>
<%=link_to("Learn More", { :controller=> "/content", :protocol => "http://", :action => "about"}, :class => "arialUln16pt291911") %>
