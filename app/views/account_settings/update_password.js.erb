if (<%= current_user.errors.length > 0%>){
	var errors = "";
	<%current_user.errors.each do |key, value|%>
	errors += "<li><label class='error' for='website_url' generated='true' style='display: block;'><strong><%= key.to_s.capitalize %></strong>&nbsp;<%= value %>.</label></li>"; 
	<%end%>
	jQuery("#errorContent").html(errors);	
	jQuery("#showErrors").click();
}else{
	jQuery("#current_password").val("");
	jQuery("#password").val("");
	jQuery("#password_confirmation").val("");
	jQuery("#editPasswordBtn").click();
}
